            // StateHasChanged();
            var r = await (mgr as FBC.Devices.Services.FBCAuthenticationStateProvider)!.LoginAsync(args.Username, args.Password/* , args.RememberMe */);
            if (r)
            {
                Navi.NavigateTo("/");
            }
            else
            {
                loginMessage = "Invalid username or password.";
            }
        }
        catch (Exception exc)
        {
            loginMessage = "Error: " + exc.Message;
        }
